<?php

/**
 * @file
 * Advanced Logging System for Deploy module.
 * Add ability to perform deploy process in test mode.
 */

/**
 * Deployment statuses.
 */
define('DEL_IMPORT_STATUS_PROCESSED', 0);
define('DEL_IMPORT_STATUS_SAVED', 1);
define('DEL_IMPORT_STATUS_UPDATED', 2);
define('DEL_IMPORT_STATUS_SKIPPED', 3);
define('DEL_IMPORT_STATUS_TEST_MODE', 4);
define('DEL_IMPORT_STATUS_FAILED', 5);

// Translation context.
define('DEPLOY_EXTRA_LOG_TRANSLATE_CONTEXT', 'deploy_extra_log');

/**
 * Include checking structure hook implementations.
 */
module_load_include('inc', 'deploy_extra_log', 'deploy_extra_log.core');

/**
 * Implements hook_DeployServiceRestJsonAdv_form_alter().
 */
function deploy_extra_log_DeployServiceRestJsonAdv_form_alter(&$form, &$form_state, &$config) {
  // Settings for using advanced logging mode.
  $form['adv_log'] = array(
    '#title' => t('Advanced Logging'),
    '#description' => t("Select this if the advanced logging mode should be enabled"),
    '#type' => 'checkbox',
    '#default_value' => $config['adv_log'],
    '#weight' => 8,
  );

  // Settings for using test mode.
  $form['tmode'] = array(
    '#type' => 'checkbox',
    '#title' => t('Test mode'),
    '#description' => t('Check this to enable test mode without creating or updating entities on the endpoint side.'),
    '#default_value' => $config['tmode'],
    '#weight' => 8,
  );

  // Settings to skip update operation.
  $form['skip'] = array(
    '#type' => 'checkbox',
    '#title' => t('Skip update'),
    '#description' => t('Check this to enable the skip mode. If the entity already exists update operation will be skipped.'),
    '#default_value' => $config['skip'],
    '#weight' => 8,
  );
}

/**
 * Implements hook_DeployServiceRestJsonAdv_config_alter().
 */
function deploy_extra_log_DeployServiceRestJsonAdv_config_alter(&$config) {
  $config += array(
    'adv_log' => FALSE,
    'tmode'   => FALSE,
    'skip'    => FALSE,
  );
}

/**
 * Implements hook_DeployServiceRestJsonAdv_entity_alter().
 * Filling entity __metadata property before export/deploy
 * process has been started.
 */
function deploy_extra_log_DeployServiceRestJsonAdv_entity_alter(&$entity, $config) {

  if (isset($entity->__metadata)) {
    $metadata = &$entity->__metadata;
    $to_metadata = deploy_extra_to_metadata();
    foreach ($to_metadata as $property) {
      if(isset($config[$property])) {
        $metadata['deploy_extra'][$property] = $config[$property];
      }
    }
  }
}

/**
 * Implements hook_module_implements_alter().
 * TODO CHECK THIS
 */
function deploy_extra_log_module_implements_alter(&$implementations, $hook) {
  if ($hook == 'services_resources_alter') {
    // Move deploy_extra_log_module_implements_alter() to the end of the list.
    // module_implements() iterates through $implementations with a foreach
    // loop which PHP iterates  in the order that the items were added,
    // so to move an item to the end of the array, we remove it and then add it.
    $group = $implementations['deploy_extra_log'];
    unset($implementations['deploy_extra_log']);
    $implementations['deploy_extra_log'] = $group;
  }
}

/**
 * Implements hook_views_api().
 */
function deploy_extra_log_views_api() {
  return array('api' => 3);
}
